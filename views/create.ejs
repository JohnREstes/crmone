<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Request</title>
  <link rel="stylesheet" href="../css/request-form.css">
</head>
<body>
  <header>
    <h1>OneCRM</h1>
    <a href="/logout">Logout</a>
  </header>

  <main>
    <div class="horizontal-nav">
      <div class="horizontal-nav-item">Add Guest</div>
      <div class="horizontal-nav-item">
        <a href="/dashboard">Close</a>
      </div>
    </div>
    
    <div class="container">
      <form action="/dashboard/create" method="POST">
        <div>
          <label for="name">Request Name:</label>
          <input type="text" id="name" name="name" required>
        </div>
        <div>
          <label for="fullName">Full Name:</label>
          <input type="text" id="fullName" name="fullName" required>
        </div>
        <div>
          <label for="dob">Date of Birth:</label>
          <input type="date" id="dob" name="dob" required>
        </div>
        <div>
          <label for="address">Address:</label>
          <input type="text" id="address" name="address" required>
        </div>
        <div>
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div>
          <label for="passportNumber">Passport Number:</label>
          <input type="text" id="passportNumber" name="passportNumber" required>
        </div>
        <div>
          <label for="passportCountry">Passport Country:</label>
          <input type="text" id="passportCountry" name="passportCountry" required>
        </div>
        <div>
          <label for="passportExpiry">Passport Expiry:</label>
          <input type="date" id="passportExpiry" name="passportExpiry" required>
        </div>
        <div>
          <label for="frequentFlierNumbers">Frequent Flier Numbers:</label>
          <!-- Repeatable inputs for multiple airlines -->
          <input type="text" id="frequentFlierNumbers" name="frequentFlierNumbers[0][airline]" placeholder="Airline">
          <input type="text" id="frequentFlierNumbers" name="frequentFlierNumbers[0][number]" placeholder="Number">
          <!-- Add more as needed -->
        </div>
        <div>
          <label for="creditCard">Credit Card Number:</label>
          <input type="text" id="creditCard" name="creditCard[number]" required>
        </div>
        <div>
          <label for="expiry">Expiry Date:</label>
          <input type="text" id="expiry" name="creditCard[expiry]" required>
        </div>
        <div>
          <label for="cvv">CVV:</label>
          <input type="text" id="cvv" name="creditCard[cvv]" required>
        </div>
        <div>
          <label for="trips">Trips:</label>
          <!-- Repeatable inputs for multiple trips -->
          <input type="text" id="trips" name="trips[0][destination]" placeholder="Destination">
          <input type="date" id="trips" name="trips[0][startDate]" placeholder="Start Date">
          <input type="date" id="trips" name="trips[0][endDate]" placeholder="End Date">
          <textarea id="trips" name="trips[0][details]" placeholder="Details"></textarea>
          <!-- Add more as needed -->
        </div>
        <div>
          <label for="notes">Notes:</label>
          <textarea id="notes" name="notes"></textarea>
        </div>
        <div>
          <label for="owner">Owner:</label>
          <select name="owner" id="owner" required>
            <option value="">Select Owner</option>
            <% users.forEach(user => { %>
              <option value="<%= user._id %>">
                <%= user.name %>
              </option>
            <% }); %>
          </select>
        </div>
        <div class="button-container">
          <button type="submit">Add</button>
        </div>
      </form>
    </div>
  </main>
</body>
</html>
